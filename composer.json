{
  "name" : "fastybird/tuya-connector",
  "type" : "connector",
  "description" : "FastyBird IoT connector for Tuya devices",
  "keywords" : [
    "fastybird",
    "fb",
    "iot",
    "tuya",
    "connector"
  ],

  "homepage" : "https://www.fastybird.com",

  "license" : "Apache-2.0",

  "authors" : [
    {
      "name" : "FastyBird s.r.o.",
      "email" : "code@fastybird.com",
      "homepage" : "https://www.fastybird.com/"
    },
    {
      "name" : "Adam Kadlec",
      "email" : "adam.kadlec@fastybird.com"
    }
  ],

  "support" : {
    "email" : "code@fastybird.com",
    "issues" : "https://github.com/FastyBird/tuya-connector/issues",
    "source" : "https://github.com/FastyBird/tuya-connector"
  },

  "prefer-stable" : true,

  "minimum-stability" : "dev",

  "require" : {
    "php" : ">=8.1.0",
    "ext-openssl" : "*",
    "ext-pcntl" : "*",
    "cweagans/composer-patches" : "^1.7",
    "evenement/evenement" : "^3.0",
    "fastybird/datetime-factory" : "^0.6",
    "fastybird/devices-module" : "dev-main as 0.75.0",
    "fastybird/metadata" : "^1.1",
    "guzzlehttp/guzzle" : "^7.5",
    "nette/di" : "^3.0",
    "psr/log" : "^1.1",
    "ratchet/pawl" : "^0.4.1",
    "react/async" : "^4.0",
    "react/datagram" : "^1.8"
  },

  "require-dev" : {
    "brianium/paratest" : "^6.6",
    "contributte/translation" : "^0.9",
    "dg/bypass-finals" : "^1.4",
    "infection/infection" : "^0.26",
    "orisai/coding-standard" : "^3.2",
    "pds/skeleton" : "^1.0",
    "php-parallel-lint/php-parallel-lint" : "^1.3",
    "phpstan/extension-installer" : "^1.1",
    "phpstan/phpstan" : "^1.8",
    "phpstan/phpstan-deprecation-rules" : "^1.0",
    "phpstan/phpstan-doctrine" : "^1.3",
    "phpstan/phpstan-nette" : "^1.1",
    "phpstan/phpstan-phpunit" : "^1.1",
    "phpstan/phpstan-strict-rules" : "^1.4",
    "phpunit/phpunit" : "^9.5",
    "staabm/annotate-pull-request-from-checkstyle" : "^1.8",
    "tracy/tracy" : "^2.9"
  },

  "autoload" : {
    "psr-4" : {
      "FastyBird\\TuyaConnector\\" : "src/"
    }
  },

  "autoload-dev" : {
    "psr-4" : {
      "Tests\\Cases\\Unit\\" : "tests/cases/unit",
      "Tests\\Tools\\" : "tests/tools"
    }
  },

  "config" : {
    "sort-packages" : true,
    "allow-plugins" : {
      "cweagans/composer-patches": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true,
      "infection/extension-installer": true
    }
  },

  "extra" : {
    "patches" : {
      "nettrine/orm" : {
        "Enable connection overrides" : "https://raw.githubusercontent.com/FastyBird/libraries-patches/master/nettrine.orm.mangerRegistry.diff"
      }
    }
  }
}
